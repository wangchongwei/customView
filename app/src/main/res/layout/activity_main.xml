<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.justin.customview.customview.MyInput
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:title="请输入"
        app:hintColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:hintSize="16px"
        android:id="@+id/edit_mine"
        />

    <com.justin.customview.customview.MyChat
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_mine"

        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="test"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/text_hello"
        />

    <com.justin.customview.customview.MyView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/text_hello"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        app:axieColor="@color/black"
        android:id="@+id/myView"
        />

</androidx.constraintlayout.widget.ConstraintLayout>